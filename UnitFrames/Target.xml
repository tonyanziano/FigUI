<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
  <Script file="Target.lua" />

  <Button name="FigTargetFrame" inherits="SecureUnitButtonTemplate" parent="UIParent" movable="true" enableMouse="true">
    <Size x="200" y="75"/>
    <Anchors>
      <Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER" x="200" y="0"/>
    </Anchors>

    <Frames>
      <!-- HP -->
      <StatusBar parentKey="hp" minValue="0" maxValue="100" defaultValue="100">
        <Size x="200" y="50"/>
        <Anchors>
          <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP" />
        </Anchors>

        <BarTexture file="Interface\AddOns\FigUI-2\Textures\GenericBarFill"/>
        <BarColor r="0" g="0" b="0" a="1"/>

        <Layers>
          <Layer level="BACKGROUND">
            <Texture>
              <Color r="0" g="0" b="0" a="0.5"/>
            </Texture>
          </Layer>
          <Layer level="ARTWORK">
            <FontString parentKey="text" inherits="SystemFont_Shadow_Small">
              <Size>
                <AbsDimension x="0" y="16"/>
              </Size>
              <Anchors>
                <Anchor point="CENTER" y="-10"/>
              </Anchors>
            </FontString>
            <FontString parentKey="playerInfo" inherits="SystemFont_Shadow_Small">
              <Size>
                <AbsDimension x="0" y="16"/>
              </Size>
              <Anchors>
                <Anchor point="TOPLEFT" x="4" y="-2" />
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </StatusBar>

      <!-- Power -->
      <StatusBar parentKey="power" minValue="0" maxValue="100" defaultValue="100">
        <Size x="200" y="25"/>
        <Anchors>
          <Anchor point="BOTTOM" relativeTo="$parent" relativePoint="BOTTOM" />
        </Anchors>

        <!-- Status bar fill texture -->
        <BarTexture file="Interface\AddOns\FigUI-2\Textures\GenericBarFill"/>
        <BarColor r="0" g="0" b="0" a="1"/>

        <Layers>
          <Layer level="BACKGROUND">
            <Texture>
              <Color r="0" g="0" b="0" a="0.5"/>
            </Texture>
          </Layer>
          <Layer level="ARTWORK">
            <FontString parentKey="text" inherits="SystemFont_Shadow_Small">
              <Size>
                <AbsDimension x="0" y="16"/>
              </Size>
              <Anchors>
                <Anchor point="CENTER"/>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </StatusBar>
    </Frames>

    <Scripts>
      <OnLoad>
        -- configure to behave like default target frame
	      self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
        self:RegisterForDrag("LeftButton")
        local showMenu = function()
          ToggleDropDownMenu(1, nil, TargetFrameDropDown, self, 0, 0);
        end
        SecureUnitButton_OnLoad(self, 'target', showMenu)
        self:SetAttribute('unit', 'target')
        RegisterUnitWatch(self, false)

        FigTarget.initialize(self)
        self.isLocked = false
      </OnLoad>
      <OnDragStart>
        if not self.isLocked then
          self:StartMoving()
        end
      </OnDragStart>
      <OnDragStop>
        self:StopMovingOrSizing()
      </OnDragStop>
      <OnEnter>
        GameTooltip_SetDefaultAnchor(GameTooltip, UIParent)
        GameTooltip:SetUnit('target')
        GameTooltip:Show()
      </OnEnter>
      <OnLeave>
        GameTooltip:Hide()
      </OnLeave>
      <OnShow>
        FigTarget.onShow(self)
      </OnShow>
    </Scripts>
  </Button>
</Ui>