<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
  <Script file="DeathKnight.lua" />

  <Frame name="FigDeathKnightRune" virtual="true" >
    <Layers>
      <Layer level="BACKGROUND">
        <Texture setAllPoints="true" file="Interface\AddOns\FigUI-2\Textures\GenericBarFill">
          <Color r=".28" g=".15" b="0.91" a="1"/>
        </Texture>
      </Layer>
    </Layers>
    <Frames>
      <Cooldown inherits="CooldownFrameTemplate" parentKey="cd" />
    </Frames>
  </Frame>

  <Frame name="FigResourceDeathKnight" movable="true" enableMouse="true" hidden="true" parent="UIParent">
    <Size x="200" y="50"/>
    <Anchors>
      <Anchor point="CENTER" relativeTo="UIParent" relativePoint="CENTER" x="-100" y="0"/>
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture setAllPoints="true">
          <Color r="0" g="0" b="0" a=".5"/>
        </Texture>
      </Layer>
    </Layers>

    <Frames>
      <!-- Runes -->
      <Frame parentKey="runeContainer">
        <Size x="200" y="25"/>
        <Anchors>
          <Anchor point="TOP" relativeTo="$parent" relativePoint="TOP"/>
        </Anchors>
      </Frame>

      <!-- Runic Power -->
      <StatusBar parentKey="runicPower" minValue="0" maxValue="100" defaultValue="100">
        <Size x="200" y="25"/>
        <Anchors>
          <Anchor point="BOTTOM" relativeTo="$parent" relativePoint="BOTTOM"/>
        </Anchors>

        <!-- Status bar fill texture -->
        <BarTexture file="Interface\AddOns\FigUI-2\Textures\GenericBarFill"/>
        <BarColor r=".18" g=".56" b=".8" a="1"/>

        <Layers>
          <Layer level="BACKGROUND">
            <Texture setAllPoints="true">
              <Color r="0" g="0" b="0" a=".5"/>
            </Texture>
          </Layer>
          <Layer level="ARTWORK">
            <FontString parentKey="text" inherits="SystemFont_Shadow_Small">
              <Size>
                <AbsDimension x="0" y="16"/>
              </Size>
              <Anchors>
                <Anchor point="CENTER"/>
              </Anchors>
            </FontString>
          </Layer>
        </Layers>
      </StatusBar>
    </Frames>

    <Scripts>
      <OnLoad>
        -- only show if the player is a dk
        local _, class = UnitClass("player")
        if class ~= 'DEATHKNIGHT' then return end

        self:Show()
        self:RegisterForDrag("LeftButton")
        self.isLocked = false
        FigDK.initialize(self)
      </OnLoad>
      <OnDragStart>
        if not self.isLocked then
          self:StartMoving()
        end
      </OnDragStart>
      <OnDragStop>
        self:StopMovingOrSizing()
      </OnDragStop>
    </Scripts>
  </Frame>
</Ui>